#include <bits/stdc++.h>
using namespace std;
/*
// arr = [5,6,4,9,1,7,3];
// c = 2;
// 
// 
//
*/
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<int> arr(n);
        for(int i =0;i<n;i++){
            cin>>arr[i];
        }
        int c = 0;
        for(int i=1;i<n;i++){
            c=c+(abs(arr[i]-arr[i-1]));
        }
        if(c==0){
            cout<<"1"<<endl;
        }
        else if(c==abs(arr[0]-arr[n-1])){
            cout<<"2"<<endl;
        }
        else{
            cout<<"3"<<endl;
        }
        
    }
}
